{
  "name": "@hemjs/hem",
  "version": "0.1.2",
  "description": "A dependency injection based application framework for Node.js",
  "author": "Augustus Kamau",
  "license": "MIT",
  "keywords": [
    "hemjs",
    "hem",
    "framework"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "prerelease": "npm run prebuild && npm run build",
    "release": "release-it"
  },
  "dependencies": {
    "@hemjs/notions": "0.1.1",
    "iterare": "1.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.1",
    "@commitlint/config-conventional": "17.6.1",
    "@hemjs/express": "0.1.2",
    "@hemjs/needle": "0.2.2",
    "@hemtypes/container": "0.1.5",
    "@hemtypes/core": "0.2.4",
    "@hemtypes/express": "0.1.6",
    "@hemtypes/hem": "0.1.3",
    "@hemtypes/hooks": "0.1.4",
    "@hemtypes/http": "0.1.2",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.1",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.1",
    "prettier": "2.8.8",
    "release-it": "15.10.1",
    "rimraf": "5.0.0",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "typescript": "5.0.4"
  },
  "homepage": "https://github.com/hemjs/hem#readme",
  "bugs": {
    "url": "https://github.com/hemjs/hem/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemjs/hem.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
